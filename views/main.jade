head
  title Elias
  link(rel="stylesheet", href="/css/bootstrap.css")
  link(rel="stylesheet", href="/css/flat-ui.css")
  link(rel="stylesheet", href="/css/style.css")
body
  .navbar
    .navbar-inner
      ul.nav

  .containner#main
    .row.bit-entry
      .span3.timeline-column
        .outercircle-date
          .innercircle-date
            span.day#today-day= moment().format("DD")
            span.month#today-month= moment().format("MMM")
      .span5
        .message-box.login-form
          textarea#content-txt.message-box-text(placeholder="Type text here", rows=3)
          a#save-btn.btn Save
    each bit in bits
      .row.bit-entry
        .span3.timeline-column 
          if moment().format("YYMMDD") == moment(bit.date).format("YYMMDD")
            .span.timeline-hour #{moment(bit.date).format("HH:MM a")}
          else
            .outercircle-date
              .innercircle-date
                span.day= moment(bit.date).format("DD")
                span.month= moment(bit.date).format("MMM")
        .span5
          .message-box
            | #{bit.content}


