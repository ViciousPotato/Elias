head
  title Elias
  link(rel="stylesheet", href="/css/bootstrap.css")
  link(rel="stylesheet", href="/css/flat-ui.css")
  link(rel="stylesheet", href="/css/style.css")
body
  .navbar
    .navbar-inner
      ul.nav

  .containner#main
    .timeline
    .row.bit-entry-date-header
      .span3.timeline-column
        .outercircle-date
          .innercircle-date
            span.day#today-day= moment().format("MMM")
            span.month#today-month= moment().format("DD")
    .row.bit-entry
      .span3.timeline-column
      .span5
        .message-box.login-form
          textarea#content-txt.message-box-text(placeholder="Type text here", rows=3)
          a#save-btn.btn Save
    each bits, groupname in groups
      if (moment().format("MMM|DD") != groupname)
        .row.bit-entry-date-header
          .span3.timeline-column
            .outercircle-date
              .innercircle-date
                span.day= groupname.split("|")[0]
                span.month= groupname.split("|")[1]
      each bit in bits
        .row.bit-entry
          .span3.timeline-column
              .span.timeline-hour #{moment(bit.date).format("HH:MM a")}
          .span5
            .message-box
              != marked(bit.content)


    script(src="/js/jquery-1.8.2.min.js")
    script(src="/js/jquery-ui-1.10.0.custom.min.js")
    script(src="/js/jquery.dropkick-1.0.0.js")
    script(src="/js/custom_checkbox_and_radio.js")
    script(src="/js/custom_radio.js")
    script(src="/js/jquery.tagsinput.js")
