!!! 5
head
  title Elias
  link(rel="stylesheet", href="/css/style.css")

body
  .blur-wrapper
    img#blur-img(src="/img/blur-bg.jpg")
    canvas#blur-canvas
  .working-article
    .article-left
      .logo
      .article-toolbar
        .span.toolbar-add-doc
          a(href="#")
        .span.toolbar-add-bit
          a(href="#")

    .article-content
    .article-right

  script#article-template(type="text/x-handlebars-template")
    .article-title
      {{title}}
    .article-status
      {{created}}
    {{#bits}}
    .article-section
      {{{parseMarkdown this.content}}}
    {{/bits}}

  script#bit-list-template(type="text/x-handlebars-template")
    {{#bits}}
    .bit-list-entry
      .bit-date
        .bit-date-month
          {{getMonth this.date}}
        .bit-date-day
          {{getDay this.date}}
      .bit-summary
        {{this.content}}
    {{/bits}}

  script(src="/js/jquery-1.8.2.min.js")
  script(src="/js/StackBlur.js")
  script(src="/js/handlebars-v2.0.0.js")
  script(src="/js/marked.js")
  script(src="/js/moment.min.js")
  script(src="/js/underscore-min.js")
  script(src="/js/app.js")